
<p id="notice"><%= notice %></p>

<h1 class ="project_all">Projects</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Job type</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Price</th>
      <th>File</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.client %></td>
        <td><%= project.job_type %></td>
        <td><%= project.description %></td>
        <td><%= project.date_start %></td>
        <td><%= project.date_end %></td>
        <td>$<%= project.formatted_price %></td>
        <td><%= project.file %></td>
        <% if project.status == true%>
          <td>Completed</td>
        <% else %>
          <td>Uncompleted</td>
        <%end%>
        <td><%= link_to 'Details', project %></td>
        <td><%= link_to 'Edit Project', edit_project_path(project) %></td>
        <td><%= link_to 'Delete Project', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="nav_links">
  <%= link_to 'Home', root_path %> |
  <%= link_to 'Add New Project', new_project_path %> |
  <%= link_to 'Completed', completed_path %> |
  <%= link_to 'Pending', uncompleted_path %> 
</div>
